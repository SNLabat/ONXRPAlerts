{
  "manifest_version": 3,
  "name": "ONX RP Alerts",
  "description": "Get real-time alerts for your position in the ONX RP queue.",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://onx.gg/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"] // Replaced 'service_worker' with 'scripts'
  },
  "content_scripts": [
    {
      "matches": ["https://onx.gg/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "onxrpalerts@gmail.com" // Replace with your unique add-on ID
    }
  }
}
